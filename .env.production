# Production Environment Variables
# Copy this to .env.prod and fill in your values

# === REQUIRED CONFIGURATION ===

# Domain configuration
DOMAIN=nostrmaxi.com
BASE_URL=https://nostrmaxi.com

# Database (use strong password!)
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# JWT Secret (generate with: openssl rand -hex 64)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET

# Webhook Secret (generate with: openssl rand -hex 32)
WEBHOOK_SECRET=CHANGE_THIS_TO_RANDOM_SECRET

# === PAYMENT CONFIGURATION ===

# Default provider (btcpay or lnbits)
PAYMENTS_PROVIDER=btcpay

# BTCPay Server
BTCPAY_URL=https://btcpay.example.com
BTCPAY_API_KEY=your-btcpay-api-key
BTCPAY_STORE_ID=your-btcpay-store-id
BTCPAY_WEBHOOK_SECRET=CHANGE_THIS_TO_RANDOM_SECRET

# LNbits (legacy fallback)
LNBITS_URL=https://legend.lnbits.com
LNBITS_API_KEY=your-lnbits-admin-key
LNBITS_WEBHOOK_SECRET=CHANGE_THIS_TO_RANDOM_SECRET

# === NIP-05 CONFIGURATION ===

NIP05_RELAYS=wss://relay.damus.io,wss://relay.nostr.band,wss://nos.lol,wss://relay.snort.social

# === ADMIN CONFIGURATION ===

# Comma-separated hex pubkeys with admin access
ADMIN_PUBKEYS=

# === WEB OF TRUST (Optional) ===

# Comma-separated hex pubkeys to use as trust anchors
WOT_TRUST_ANCHORS=

# === OPTIONAL CONFIGURATION ===

# Node environment
NODE_ENV=production

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# === BEACON SEARCH (Optional) ===
BEACON_API_BASE_URL=http://10.1.10.143:8090
BEACON_API_KEY=
BEACON_API_KEY_HEADER=Authorization
BEACON_API_TIMEOUT_MS=7000
BEACON_SEARCH_CACHE_TTL_MS=120000
