{
  "name": "nostrmaxi",
  "version": "1.0.0",
  "description": "NostrMaxi - Identity & Subscription Platform for Nostr",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "dev": "concurrently \"npm run start:dev\" \"cd frontend && npm run dev\"",
    "populate-relay": "ts-node scripts/populate-relay.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "test": "jest",
    "test:e2e": "jest --runInBand --testPathPattern=\\.e2e\\.test\\.ts$",
    "test:proven-components": "node -e \"import('./services/proven-components-gateway.mjs').then(m=>console.log(m.health())).catch(e=>{console.error(e);process.exit(1)})\"",
    "lint": "echo \"No lint configured\" && exit 0"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.2.0",
    "@prisma/client": "^5.22.0",
    "@strangesignal/nostr-auth": "file:../../packages/nostr-auth",
    "bech32": "^2.0.0",
    "cache-manager": "^7.2.8",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "^8.1.0",
    "nostr-tools": "^2.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4",
    "feedparser": "^2.2.10",
    "csv-parse": "^5.5.6",
    "xml2js": "^0.6.2",
    "zustand": "^5.0.3",
    "axios": "^1.9.0",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "playwright": "^1.58.2",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "bin": {
    "nostrmaxi": "bin/nostrmaxi.js"
  },
  "engines": {
    "node": ">=20"
  }
}
